<!-- 朝礼で -->
<kyscript>
  
  <frame count ="0"/>
  <useAndShow id ="cast00" res ="chourei/choureiOmae" pos ="0,0,2"/>
  <useAndShow id ="fuki" res ="chourei/choureiFukidasi" pos ="380,180,1"/>
