<?xml version="1.0" encoding="utf-8" ?>
<!-- がんばれ受験生 -->
<kyscript>
  
  <frame count ="0"/>
  <useAndShow id ="kiss" res ="kiss/kissCouple" pos ="100,-10,5"/>
  <useAndShow id ="floor" res ="jukensei/jukenseiRoom" pos ="0,0,4"/>
  <useAndShow id ="token" res ="jukensei/madoCurtain1" pos ="184,15,1"/>
  <beginSound name ="bgm_love" loop="true"/>
  <beginIf id="goal1" target="touchaction" direction="-3,0" goto="1000"/>
  <beginIf id="goal2" target="touch" crange="80,32,150,180" goto="2000"/>
  <beginTimer id ="timer0" duration="600"/>
  <beginIf id="timeout0" target="animend" name ="timer0" goto="6000" priority="1"/>
  <wait />


  <!-- 閉める -->
  <frame count ="1000"/>
  <endIf id ="all"/>
  <beginSound name="se_curtain"/>
  <beginSound name="bgm_summernight" loop="true" volume="0.5"/>
  <unuse id="token"/>
  <useAndShow id ="token1" res ="jukensei/madoCurtain2" pos ="154,15,0"/>
  <frame count ="1008"/>
  <unuse id="token1"/>
  <useAndShow id ="token2" res ="jukensei/madoCurtain3" pos ="104,15,0"/>
  <frame count ="1120"/>
  <halt result="1"/>
  
  <!-- シークレット判定タッチ一回目 -->
  <frame count ="2000"/>
  <beginIf id="goal3" target="touch" crange="80,32,150,180" goto="3000"/>
  <beginSound name="se_foot"/>
  <wait />
  
  <!-- シークレット判定タッチ二回目 -->
  <frame count ="3000"/>
  <beginSound name="se_foot"/>
  <endIf id ="all"/>
  <endSound fade="1"/>
  <beginMoveEx id="kiss" color="0,0,0,0" duration="60"/>
  
  <frame count ="3060"/>  
  <beginSound name="bgm_summernight" loop="true" volume="0.5"/>
  
  <frame count ="3180"/>
  <var name="secret" op="set" value="1"/>
  <halt result="1"/>
  

  <!-- 時間切れ -->
  <frame count ="6000"/>
  <endIf/>
  <halt result="0"/>

</kyscript>