<?xml version="1.0" encoding="utf-8" ?>
<!-- 電車で -->
<kyscript>
  
  <frame count ="0"/>
  <useAndShow id ="bg" res ="densya/densyaBG" pos ="0,0,3"/>
  <useAndShow id ="turikawa" res="densya/densyaTurikawa" pos ="0,158,2"/>
  <useAndShow id ="hito1" res ="densya/densyaHitoNemuri" pos ="-240,-60,2"/>
  <useAndShow id ="hito2" res ="densya/densyaHitoNemuri" pos ="-160,-60,2"/>
  <useAndShow id ="hito3" res ="densya/densyaHitoNemuri" pos ="140,-60,2"/>
  <useAndShow id ="hito4" res ="densya/densyaHitoNemuri" pos ="220,-60,2"/>
  <useAndShow id ="futari" res ="densya/densyaFutari" pos ="350, -100, -1"/>
  <useAndShow id ="omae" res ="densya/densyaOmae" pos ="-20,-60,0"/>
  <beginSound name ="bgm_train" loop="true"/>

  <!-- ２人入場 -->
  <beginMove id ="futari" to ="160,-100" duration="60"/>
  <frame count ="40"/>
  <beginDrag id ="omae" rewind ="true" range="-200, -120, 200, 120"/>
  <beginIf id ="goal1" target ="object" trigger="up" name="omae" crange="-100,-50,100,120" goto ="1000"/>
  <beginIf id ="goal2" target ="object" trigger="up" name="omae" crange=" 60,-50,100,120" goto ="2000"/>

  <!-- 時間切れで２人退場 読まない＆シークレット-->
  <frame count ="600"/>
  <endDrag id ="omae"/>
  <endIf id="all"/>
  <beginMove id ="futari" to ="350,-100" duration="60"/>
  <frame count ="660"/>
  <var name="secret" op="set" value="1"/>
  <halt result="2"/>
  
  <!-- 左の席に移動 -->
  <frame count ="1000"/>
  <endDrag id ="omae"/>
  <endIf id ="all"/>
  <beginMove id ="omae" to ="-80,-60" duration="30"/>
  <frame count ="1120"/>
  <beginMove id ="futari" to="30,-100" duration="120"/>
  <frame count ="1240"/>
  <halt result="1"/>

  <!-- 右の席に移動 -->
  <frame count ="2000"/>
  <endDrag id ="omae"/>
  <endIf id ="all"/>
  <beginMove id ="omae" to ="60,-60" duration="60"/>
  <frame count ="2120"/>
  <beginMove id ="futari" to="-40,-100" duration="60"/>
  <frame count ="2240"/>
  <halt result="1"/>
  
</kyscript>