<?xml version="1.0" encoding="utf-8" ?>
<!-- 続再び電車で -->
<kyscript>
  
  <frame count ="0"/>
  <useAndShow id ="bg" res ="densya/densyaBG" pos ="0,0,3"/>
  <useAndShow id ="turikawa" res="densya/densyaTurikawa" pos ="0,158,2"/>
  <useAndShow id ="hito1" res ="densya/densyaHitoNemuri" pos ="-200,-60,2"/>
  <useAndShow id ="hito2" res ="densya/densyaHitoNemuri" pos ="-120,-60,2"/>
  <useAndShow id ="hito3" res ="densya/densyaHitoNemuri" pos ="130,-60,2"/>
  <useAndShow id ="hito4" res ="densya/densyaHitoNemuri" pos ="210,-60,2"/>
  <useAndShow id ="omae" res ="densya/densyaOmae3" pos ="50,-60,0"/>
  <beginAnim id ="omae" anim="1"/>
  <useAndShow id ="jk" res ="densya/densyaJKNemuri" pos ="-25,-60,1"/>
  <beginSound name ="bgm_train" loop="true"/>

  <frame count ="180"/>
  <beginAnim id ="jk" anim="1"/>

  <frame count ="240"/>
  <beginIf id="goal1" target="touchaction" direction="-3,0" goto="1000"/>

  <!-- 時間切れ -->
  <frame count ="660"/>
  <halt result="1"/>


  <!-- つつく -->
  <frame count ="1000"/>
  <unuse id="goal1"/>
  <beginAnim id ="omae" anim="2"/>
  <beginSound name ="se_yes" loop="false"/>
  <frame count ="1080"/>
  <beginAnim id ="omae" anim="1"/>
  <beginAnim id ="jk" anim="2"/>
  <frame count ="1100"/>

  <beginDrag id ="omae" rewind ="true" range="-200, -120, 200, 120"/>
  <beginAnim id ="omae" anim="0"/>
  <beginIf id ="goal1" target ="object" trigger="up" name="omae" crange=" -220,-50,80,240" goto ="2000"/>
  <beginIf id ="goal2" target ="object" trigger="up" name="omae" crange=" 220,-50,80,240" goto ="3000"/>
  <frame count ="1360"/>
  <halt result="2"/>

  <!-- 立ち去る左（シークレット） -->
  <frame count ="2000"/>
  <endDrag id ="omae"/>
  <endIf id="all"/>
  <beginMove id ="omae" to ="-280,-70" duration="60"/>
  <frame count ="2120"/>
  <var name="secret" op="set" value="1"/>
  <halt result="0"/>

  <!-- 立ち去る右（シークレット） -->
  <frame count ="3000"/>
  <endDrag id ="omae"/>
  <endIf id="all"/>
  <beginMove id ="omae" to ="320,-70" duration="60"/>
  <frame count ="3120"/>
  <var name="secret" op="set" value="1"/>
  <halt result="0"/>
  
</kyscript>