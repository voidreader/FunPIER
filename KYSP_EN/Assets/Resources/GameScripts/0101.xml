<?xml version="1.0" encoding="utf-8" ?>
<!-- プロジェクター -->
<kyscript>
  
  <frame count ="0"/>
  <beginSound name="bgm_movie" loop="true"/>
  <useAndShow id ="bg" res ="projector/projectorBG" pos ="0,0,3"/>
  <useAndShow id ="screen" res ="projector/projectorScreen" pos ="0,76,5"/>
  <useAndShow id ="cast" res ="projector/projectorProjector" pos ="60,-7,2"/>

  <frame count ="120"/>
  <useAndShow id ="omae" res ="projector/projectorOmae" pos ="-320,0,2"/>
  <useAndShow id ="kage" res ="projector/projectorKage" pos ="-480,-10,4"/>
  <beginMoveEx id="omae" posAdd="640,0" duration="640"/>
  <beginMoveEx id="kage" posAdd="840,0" duration="640"/>

  <beginIf id ="goal0" target ="object" name ="omae" crange="290,-20,20,480" goto="9000"/>
  <beginIf id="goal1" target="touchaction" direction="0,-3" goto="1000"/>
  <frame count ="280"/>
  <beginIf id="goal2" target="touchaction" direction="0,3" goto="2000"/>

  <var name="result" op="set" value="2"/>


  <wait/>



  <!-- しゃがむ -->
  <frame count ="1000"/>
  <endIf id="goal1"/>
  <endIf id="goal2"/>
  <beginAnim id="omae" anim="1"/>
  <beginAnim id="kage" anim="1"/>
  <endMove id ="omae" /> 
  <endMove id ="kage" /> 
  <beginMoveEx id="omae" posAdd="640,0" duration="320"/>
  <beginMoveEx id="kage" posAdd="840,0" duration="320"/>
  <var name="result" op="set" value="1"/>
  <wait />
  
  <!-- ジャンプ -->  
  <frame count ="2000"/>
  <endIf id="goal1"/>
  <endIf id="goal2"/>
  <beginSound name="se_jump" />

  <endMove id ="omae" /> 
  <endMove id ="kage" /> 
  <function id ="omae" func ="Jump" />
  <function id ="kage" func ="Jump" />
  <beginAnim id="omae" anim="2"/>
  <beginAnim id="kage" anim="2"/>

  <frame count ="2060"/>
  <beginMoveEx id="omae" posAdd="640,0" duration="640"/>
  <beginMoveEx id="kage" posAdd="840,0" duration="640"/>
  <beginAnim id="omae" anim="0"/>
  <beginAnim id="kage" anim="0"/>
  <var name="result" op="set" value="2"/>
  <var name="secret" op="set" value="1"/>
  <wait />
  
  <!-- 出口 -->
  <frame count ="9000"/>
  <endIf id ="all" />
  <halt />
  
</kyscript>
