<?xml version="1.0" encoding="utf-8" ?>
<!-- つるつる -->
<kyscript>
  <!-- イントロ -->
  <frame count ="0"/>
  <var name="stat" op="set" value="0"/>
  <useAndShow id ="kare1" res ="turuturu/turuturuIntro" pos ="0,-10,0"/>
  <beginSound name="jg_date"/>

  <!-- 本編 -->
  <frame count ="120"/>
  <unuse id="all"/>
  <useAndShow id ="robot" res ="turuturu/turuturuBarber" pos ="-120,150,2"/>
  <useAndShow id ="renai" res ="turuturu/turuturuBar" pos ="120,150,2"/>
  <useAndShow id ="omae" res ="turuturu/turuturuOmae" pos ="0,-120,0"/>
  <drawRect id ="rect" pos ="0,140,3" size="480,480" color="0.75, 0.75, 0.75" anchory="max"/>
  <beginSound name="bgm_sumo" loop="true"/>
  <beginDrag id ="omae" range="-240,-120,240,90"/>
  <beginIf id ="goal1" target ="object" name ="omae" crange="120,150,200,160" goto="1000"/>
  <beginIf id ="goal2" target ="object" name ="omae" crange="-120,150,200,160" goto="2000"/>

  <beginTimer id ="timer0" duration="600"/>
  <beginIf id="timeout0" target="animend" name ="timer0" goto="6000" priority="1"/>

  <wait />


  <!-- バーに入場 -->
  <frame count ="1000"/>
  <endDrag id ="omae"/>
  <endIf id="all"/>
  <beginSound name="se_enter"/>
  <beginMoveEx id ="omae" pos="120,110" scale ="0.5,0.5" duration="60"/>
  <frame count ="1060"/>
  <unuse id ="omae" />
  <!-- シークレット -->
  <frame count ="1100"/>
  <halt result ="1"/>

  <!--バーバーに入場 -->
  <frame count ="2000"/>
  <endDrag id ="omae"/>
  <endIf id="all"/>
  <beginSound name="se_enter"/>
  <beginMoveEx id ="omae" pos="-120,110" scale ="0.5,0.5" duration="60"/>
  <frame count ="2060"/>
  <unuse id ="omae" />
  <frame count ="2090"/>
  <var name="secret" op="set" value="1"/>
  <halt result ="0"/>

   <!-- 時間切れで終了 -->
  <frame count ="6000"/>
  <halt result="0"/>

</kyscript>