<?xml version="1.0" encoding="utf-8" ?>
<!-- デート -->
<kyscript>
  <!-- イントロ -->
  <frame count ="0"/>
  <var name="stat" op="set" value="0"/>
  <useAndShow id ="kare1" res ="date/dateOmaeIntro" pos ="50,-10,0"/>
  <useAndShow id ="kano1" res="date/dateKanojoIntro" pos ="-60,-10,1"/>
  <drawText id="text" textId ="2" size ="32" pos="120,180,2" />
  <beginSound name="jg_date"/>

  <!-- 本編 -->
  <frame count ="120"/>
  <unuse id="all"/>
  <useAndShow id ="robot" res ="date/dateRobot" pos ="-120,150,2"/>
  <useAndShow id ="renai" res ="date/dateRenai" pos ="120,150,2"/>
  <useAndShow id ="omae" res ="date/dateOmae1" pos ="0,-120,0"/>
  <drawRect id ="rect" pos ="0,140,3" size="480,480" color="0.75, 0.75, 0.75" anchory="max"/>
  <beginSound name="bgm_sumo" loop="true"/>
  <beginDrag id ="omae" range="-240,-120,240,90"/>
  <beginIf id ="goal1" target ="object" name ="omae" crange="120,150,200,160" goto="1000"/>
  <beginIf id ="goal2" target ="object" name ="omae" crange="-120,150,200,160" goto="2000"/>
  <beginIf id ="goal3" target ="object" name ="omae" crange="-120,30,180,80" goto="800"/>
  <beginTimer id ="timer0" duration="600"/>
  <beginIf id="timeout0" target="animend" name ="timer0" goto="6000" priority="1"/>
  <wait/>

  <!-- シークレット判定用 -->
  <frame count ="800"/>
  <unuse id ="goal3"/>
  <var name="stat" op="set" value="1"/>
  <wait/>

  <!-- 恋愛映画に入場 -->
  <frame count ="1000"/>
  <endDrag id ="omae"/>
  <endIf id="all"/>
  <beginSound name="se_enter"/>
  <beginMoveEx id ="omae" pos="120,110" scale ="0.5,0.5" duration="60"/>
  <frame count ="1060"/>
  <unuse id ="omae" />
  <frame count ="1090"/>
  <beginIfVar lhs="$stat" op="eq" rhs="1" goto="1100"/>
  <halt result ="1"/>

  <!-- シークレット -->
  <frame count ="1100"/>
  <var name="secret" op="set" value="1"/>
  <halt result ="1"/>

  <!--ロボットアニメに入場 -->
  <frame count ="2000"/>
  <endDrag id ="omae"/>
  <endIf id="all"/>
  <beginSound name="se_enter"/>
  <beginMoveEx id ="omae" pos="-120,110" scale ="0.5,0.5" duration="60"/>
  <frame count ="2060"/>
  <unuse id ="omae" />
  <frame count ="2090"/>
  <halt result ="2"/>

   <!-- 時間切れで終了 -->
  <frame count ="6000"/>
  <halt result="0"/>

</kyscript>