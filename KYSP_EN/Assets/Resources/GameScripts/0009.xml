<?xml version="1.0" encoding="utf-8" ?>
<!-- 電車で２ -->
<kyscript>
  
  <frame count ="0"/>
  <useAndShow id ="bg" res ="densya/densyaBG" pos ="0,0,3"/>
  <useAndShow id ="turikawa" res="densya/densyaTurikawa" pos ="0,158,2"/>
  <useAndShow id ="hito1" res ="densya/densyaHitoNemuri" pos ="-240,-60,2"/>
  <useAndShow id ="hito2" res ="densya/densyaHitoNemuri" pos ="-160,-60,2"/>
  <useAndShow id ="hito3" res ="densya/densyaHitoNemuri" pos ="160,-60,2"/>
  <useAndShow id ="hito4" res ="densya/densyaHitoNemuri" pos ="240,-60,2"/>
  <useAndShow id ="futari" res ="densya/densya2Couple" pos ="350, -100, -1"/>
  <useAndShow id ="hasira" res ="densya/densyaHasira" pos ="30,14,1"/>
  <useAndShow id ="omae" res ="densya/densyaOmae2" pos ="-20,-60,0"/>
  <beginSound name ="bgm_train" loop="true"/>

  <!-- ２人入場 -->
  <beginMove id ="futari" to ="160,-100" duration="60"/>
  <frame count ="40"/>
  <beginDrag id ="omae" rewind ="true" range="-200, -120, 200, 120"/>
  <beginIf id ="goal1" target ="object" trigger="up" name="omae" crange="-100,-50,100,120" goto ="1000"/>
  <beginIf id ="goal2" target ="object" trigger="up" name="omae" crange=" 80,-50,100,120" goto ="2000"/>
  <beginIf id ="goal3" target ="object" trigger="up" name="omae" crange=" -220,-120,80,120" goto ="3000"/>
  <beginIf id ="goal4" target ="object" trigger="up" name="omae" crange=" 220,-120,80,120" goto ="4000"/>

  <!-- 時間切れで２人退場 -->
  <frame count ="600"/>
  <endDrag id ="omae"/>
  <endIf id="goal1"/>
  <beginMove id ="futari" to ="350,-100" duration="60"/>
  <frame count ="660"/>
  <halt result="0"/>
  
  <!-- 左の席に移動(読まない) -->
  <frame count ="1000"/>
  <endDrag id ="omae"/>
  <endIf id ="all"/>
  <beginMove id ="omae" to ="-80,-60" duration="30"/>
  <frame count ="1120"/>
  <beginMove id ="futari" to ="350,-100" duration="60"/>
  <frame count ="1180"/>
  <halt result="2"/>

  <!-- 右の席に移動 -->
  <frame count ="2000"/>
  <endDrag id ="omae"/>
  <endIf id ="all"/>
  <beginMove id ="omae" to ="80,-60" duration="60"/>
  <frame count ="2120"/>
  <beginMove id ="futari" to="-40,-100" duration="60"/>
  <frame count ="2240"/>
  <endSound/>
  <halt result="1"/>

  <!-- 立ち去る(シークレット) -->
  <frame count ="3000"/>
  <endDrag id ="omae"/>
  <endIf id ="all"/>
  <beginMove id ="omae" to ="-280,-120" duration="30"/>
  <frame count ="3120"/>
  <beginMove id ="futari" to="-40,-100" duration="60"/>
  <frame count ="3240"/>
  <endSound/>
  <var name="secret" op="set" value="1"/>
  <halt result="1"/>

  <!-- 立ち去る(シークレット) -->
  <frame count ="4000"/>
  <endDrag id ="omae"/>
  <endIf id ="all"/>
  <beginMove id ="omae" to ="280,-120" duration="30"/>
  <frame count ="4120"/>
  <beginMove id ="futari" to="-40,-100" duration="60"/>
  <frame count ="4240"/>
  <endSound/>
  <var name="secret" op="set" value="1"/>
  <halt result="1"/>

  
</kyscript>