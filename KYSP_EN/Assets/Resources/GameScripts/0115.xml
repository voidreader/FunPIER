<?xml version="1.0" encoding="utf-8" ?>
<!-- すもう -->
<kyscript>
  
  <frame count ="0"/>
  <beginSound name="bgm_sumo" loop="true"/>
  <useAndShow id ="dohyou" res ="sumou/sumouDohyou" pos ="0,-120,2"/>
  <useAndShow id ="rikisi" res ="sumou/sumouRikisi" pos ="-48,-8,1"/>
  <useAndShow id ="kodomo" res ="sumou/sumouKodomo" pos ="40,-64,0"/>

  <beginTimer id ="timer" duration="480"/>
  <beginIf id="timeout" target="animend" name ="timer" goto="6000" priority="1"/>
  <beginIf id="left" target="touchaction" direction="-3,0" goto="1000"/>
  <beginIf id="right" target="touchaction" direction="3,0" goto="2000" priority="1"/>
  <beginIf id="goalS" target="touchaction" autoEnd ="false" direction="0,8" goto="3000"/>
  <beginIf id ="goal1" target ="object" name ="rikisi" crange="-200,-8,80,100" goto="4000"/>
  <beginIf id ="goal2" target ="object" name ="kodomo" crange="260,-64,80,100" goto="5000"/>
  <wait />

  <frame count ="1000"/>
  <beginMoveEx id="rikisi" posAdd="-40, 0" duration="10"/>
  <beginMoveEx id="kodomo" posAdd="-40, 0" duration="10"/>
  <frame count ="1001"/>
  <beginIf id="left" target="touchaction" direction="-3,0" goto="1000"/>
  <wait />

  <frame count ="2000"/>
  <beginMoveEx id="rikisi" posAdd="40, 0" duration="10"/>
  <beginMoveEx id="kodomo" posAdd="40, 0" duration="10"/>
  <frame count ="2001"/>
  <beginIf id="right" target="touchaction" direction="3,0" goto="2000"/>
  <wait />

  <frame count ="3000"/>
  <endIf id="all"/>
  <beginMoveEx id ="kodomo" posAdd="380, 200" rot="0,0,720" duration="60"/>
  <beginSound name="se_cursor" />
  <frame count ="3020"/>
  <beginSound name="se_fall"/>
  <frame count ="3060"/>
  <var name="secret" op="set" value="1"/>
  <halt result="0"/>

  <frame count ="4000"/>
  <endIf id="all"/>
  <halt result="1"/>

  <frame count ="5000"/>
  <endIf id="all"/>
  <halt result="2"/>

  <frame count ="6000"/>
  <endIf id="all"/>
  <halt result="0"/>

</kyscript>