<!-- 選択(惑星上陸) -->
<kyscript>
  <frame count ="0"/>
  <drawRect id ="rect1" color ="0,0,0,0.5" pos="0,0,4" size ="480,480"/>
  <useAndShow id ="omae0" res ="wakusei/wakuseiOmae" pos ="0,-127,0"/>
  <drawText id="message" textId="170" pos ="196,179,0" size="24" vertical="false"/>

  <frame count ="60"/>
  <drawText id="message1" textId="171" pos ="150,67,0" size="24" vertical="false"/>
  <beginSound name ="se_bikkuri" />

  <frame count ="150"/>
  <fadeScreen kind="fadeout" duration="30"/>  
  <frame count ="180"/>
  <unuse id ="rect1"/>
  <unuse id ="omae0"/>
  <unuse id ="message"/>
  <unuse id ="message1"/>
  <fadeScreen kind="fadein" duration="10"/>  
  <beginSound name ="bgm_kikou" loop ="true" />

  <drawRect id ="rect2" color ="0,0,0,0.8" pos="0,0,4" size ="480,480"/>

  <useAndShow id ="waku0" res ="wakusei/wakuseiHeroInai" pos ="-114,130,1"/>
  <useAndShow id ="waku1" res="wakusei/wakuseiHeroIru" pos ="114,130,1"/>

  <useAndShow id ="omae" res ="wakusei/wakuseiOmaeWalk" pos ="0,-150,0"/>
  <beginDrag id ="omae" range="-190,-200,170,190"/>
  <beginIf id ="goal1" target ="object" name="omae" crange="-114,134,120,160" goto="1000"/>
  <beginIf id ="goal2" target ="object" name="omae" crange="114,134,120,160" goto="2000"/>
  <beginIf id ="goal3" target ="object" name="omae" crange="0,-220,480,50" goto="3000"/>

  <!-- 時間切れ -->
  <frame count ="780"/>
  <halt result="0"/>

  <!-- いない方 -->
  <frame count ="1000"/>
  <endDrag id ="omae" />
  <endIf id ="all"/>
  <beginSound name ="se_down" />
  <beginMove id ="omae" to ="-114,134" duration="60"/>
  <frame count ="1120"/>
  <halt result="2"/>

  <!--　いるほう -->
  <frame count ="2000"/>
  <endDrag id ="omae" />
  <endIf id ="all"/>
  <beginSound name ="se_down" />
  <beginMove id ="omae" to ="114,134" duration="60"/>
  <frame count ="2120"/>
  <halt result="1"/>

  <!--　かえる -->
  <frame count ="3000"/>
  <endDrag id ="omae" />
  <endIf id ="all"/>
  <beginSound name ="se_enter" />
  <beginMove id ="omae" to ="0,-320" duration="60"/>
  <frame count ="3120"/>
  <var name="secret" op="set" value="1"/>
  <halt result="0"/>
  
</kyscript>