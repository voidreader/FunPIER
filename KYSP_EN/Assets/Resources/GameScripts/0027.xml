<?xml version="1.0" encoding="utf-8" ?>
<!-- バーで -->
<kyscript>
  
  <frame count ="0"/>
  <useAndShow id ="desk" res ="bar/barCounter" pos ="-67,-70,3"/>
  <useAndShow id ="hito" res ="bar/barHito" pos ="-106,27,2"/>
  <useAndShow id ="stool1" res ="bar/barStool1" pos ="82,-197,0"/>
  <useAndShow id ="stool2" res ="bar/barStool2" pos ="-70,-40,0"/>
  <useAndShow id ="grass" res ="bar/barGlass" pos ="-170,0,2"/>
  <useAndShow id ="omae" res ="bar/barOmaeSuwari" pos ="25,-100,1"/>
  <beginSound name="bgm_bar" loop="true"/>

  <frame count ="30"/>
  <beginMove id ="grass" to="72,-264" duration="180"/>
  <beginIf id="goal1" target="touchaction" direction="-3,0" goto="1000"/>
  <beginIf id ="goaln" target ="object" name ="grass" crange="72,-264,16,16" goto="4000"/>

  <!-- 時間切れ -->
  <frame count ="240"/>
  <beginSound name="se_glass"/>
  <frame count ="320"/>
  <halt result ="0"/>

  <!-- 手を出す -->
  <frame count ="1000"/>
  <unuse id="omae"/>
  <unuse id="goal1"/>
  <useAndShow id ="omae2" res ="bar/barOmaeCatch" pos ="25,-100,1"/>
  <beginIf id ="goal2" target ="object" name ="grass" crange="-24,-148,16,16" goto="2000"/>
  <wait />

  <!-- キャッチ -->
  <frame count ="2000"/>
  <unuse id="goal2"/> 
  <beginSound name="se_catch"/>
  <endMove id="grass"/>
  <beginIf id="goal3" target="touchaction" direction="0,3" goto="3000"/>
  <frame count ="2120"/>
  <halt result ="1"/>
  
  <!-- 投げ返し　シークレット -->
  <frame count ="3000"/>
  <unuse id="goal3"/>
  <beginMove id ="grass" to="-170,0" duration="60"/>
  <frame count ="3030"/>
  <endMove id ="grass"/>
  <beginMove id ="grass" to="-170,0" duration="40"/>
  <frame count ="3050"/>
  <endMove id ="grass"/>
  <beginMove id ="grass" to="-170,0" duration="40"/>
  <frame count ="3070"/>
  <endMove id ="grass"/>
  <beginMove id ="grass" to="-170,0" duration="40"/>
  <frame count ="3120"/>
  <var name="secret" op="set" value="1"/>
  <halt result ="0"/>

  <!-- とれなかった -->
  <frame count ="4000"/>
  <endIf id ="all"/>
  <beginSound name="se_glass"/>
  <frame count ="4100"/>
  <halt result ="0"/>

  
</kyscript>
