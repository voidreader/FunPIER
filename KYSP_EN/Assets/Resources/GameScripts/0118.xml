<?xml version="1.0" encoding="utf-8" ?>
<!-- UFO -->
<kyscript>
  <!-- イントロ -->
  <frame count ="0"/>
  <useAndShow id ="cast00" res ="ufo/ufoIntro" pos ="0,0,0"/>
  <beginSound name ="se_bikkuri"/>
  <frame count ="120"/>
  <fadeScreen kind="fadeout" duration="30"/>

  <!-- 本編 -->
  <frame count ="150"/>
  <unuse id="cast00"/>
  <beginSound name="bgm_night" loop ="true"/>

  <useAndShow id ="ground" res ="kiss/kissGround" pos ="0,-50,4" />

  <useAndShow id ="omae" res ="ufo/ufoOmaeWalk" pos ="280,-36,3" />
  <beginMove id ="omae" to ="145,-36" duration="320"/>
  <beginAnim id ="omae" anim ="1" />

  <useAndShow id ="cast01" res ="ufo/ufoAbec" pos ="-300,-36,3" />
  <beginMove id ="cast01" to ="0,-36" duration="480"/>
  <beginAnim id ="cast01" anim ="1" />

  <useAndShow id ="ufo" res ="tennis/tennisUFO" pos ="320,240,0" />
  <beginMoveEx id ="ufo" scale ="0.1,0.1" duration="0"/>
  <fadeScreen kind="fadein" duration="15"/>
  
  
  <!-- UFO in -->
  <frame count ="320"/>
  <beginMoveEx id ="ufo" pos ="-180,200" scale ="0.5,0.5" duration="30"/>
  <frame count ="350"/>
  <beginMoveEx id ="ufo" pos ="180,180" scale ="0.8,0.8" duration="30"/>
  <frame count ="380"/>
  <beginMoveEx id ="ufo" pos ="0,160" scale ="1,1" duration="30"/>
  <frame count ="420"/>
  <beginIf id="goal0" target="touchaction" direction="-3,0" goto="1000"/>
  <beginSound name ="se_ending"/>
  <useAndShow id ="pika0" res ="ufo/ufoHikariOku" pos ="0,140,5" />
  <useAndShow id ="pika1" res ="ufo/ufoHikariTemae" pos ="0,144,2" />

  <frame count ="450"/>
  <endIf id="goal0" />
  <beginIf id="goal1" target="touchaction" direction="-3,0" goto="2000"/>

  <frame count ="470" />
  <beginAnim id ="omae" anim ="0" />

  
  <frame count ="640"/>
  <endIf id="goal1" />
  <beginSound name="se_fall"/>
  <endMove id ="cast01" />
  <beginAnim id ="cast01" anim ="0" />
  <beginMoveEx id ="cast01" pos ="0,160" scale ="0,0,1" duration="180"/>
  <beginIf id="goal2" target="touchaction" direction="-3,0" goto="3000"/>
  <frame count ="820"/>
  <endIf id ="all"/>
  <unuse id ="cast01"/>
  <var name="result" op="set" value="0"/>
  <beginIf target="always" goto="5000"/>


  <!-- シークレット -->
  <frame count ="1000"/>
  <endMove id ="omae"/>
  <beginMove id ="omae" to ="-140,-36" duration="20"/>
  <beginAnim id ="omae" anim ="2" />
  <frame count ="1010"/>
  <endMove id ="cast01"/>
  <beginMove id ="cast01" to ="-200,-36" duration="10"/>
  <beginAnim id ="cast01" anim ="0" />
  <frame count ="1020"/>
  <beginAnim id ="omae" anim ="0" />
  
  <frame count ="1150"/>
  <var name="secret" op="set" value="1"/>
  <var name="result" op="set" value="1"/>
  <beginIf target="always" goto="5000"/>

  <!-- 正解 -->
  <frame count ="2000"/>
  <endMove id ="omae"/>
  <beginMove id ="omae" to ="0,-36" duration="20"/>
  <beginAnim id ="omae" anim ="2" />
  <frame count ="2010"/>
  <endMove id ="cast01"/>
  <beginMove id ="cast01" to ="-160,-36" duration="10"/>
  <beginAnim id ="cast01" anim ="0" />
  <frame count ="2020"/>
  <beginAnim id ="omae" anim ="0" />
  <frame count ="2060"/>
  <beginSound name="se_fall"/>
  <beginMoveEx id ="omae" pos ="0,160" scale ="0,0" duration="60"/>
  <beginAnim id ="omae" anim ="0" />
  <frame count ="2120"/>
  <unuse id ="omae"/>
  <var name="result" op="set" value="1"/>
  <beginIf target="always" goto="5000"/>

  <!-- よまない -->
  <frame count ="3000"/>
  <endMove id ="omae"/>
  <beginMove id ="omae" to ="0,-36" duration="20"/>
  <beginAnim id ="omae" anim ="2" />
  <frame count ="3020" />
  <beginAnim id ="omae" anim ="0" />
  <frame count ="3120"/>
  <beginSound name="se_fall"/>
  <beginMoveEx id ="omae" pos ="0,160" scale ="0,0" duration="60"/>
  <beginAnim id ="omae" anim ="0" />
  <unuse id ="cast01"/>
  <frame count ="3180"/>
  <unuse id ="omae"/>
  <var name="result" op="set" value="2"/>
  <beginIf target="always" goto="5000"/>


  <!-- UFO out -->
  <frame count ="5000" />
  <beginMoveEx id ="pika0" scale ="0,0" duration="30"/>
  <beginMoveEx id ="pika1" scale ="0,0" duration="30"/>
  <frame count ="5030" />
  <unuse id ="pika0"/>
  <unuse id ="pika1"/>
  <beginMoveEx id ="ufo" pos ="180,180" scale ="0.8,0.8" duration="30"/>
  <frame count ="5060" />
  <beginMoveEx id ="ufo" pos ="-180,200" scale ="0.5,0.5" duration="30"/>
  <frame count ="5090" />
  <beginMoveEx id ="ufo" pos ="320,240" scale ="0.1,0.1" duration="30"/>
  <!-- 終了 -->
  <frame count ="5150" />
  <halt />

</kyscript>


