  <!-- 時間切れ -->
  <frame count ="1210"/>
  <halt result ="1"/>

  <!-- 熊襲い1 -->  
  <frame count ="1500"/>
  <unuse id="goal1"/>
  <beginIf id="goal2" target="touchaction" direction="3,0" goto="4000"/>
  
