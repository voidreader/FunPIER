  <useAndShow id ="kun3" res ="yama/yamaKunkun" pos ="110,100,0"/>
  <frame count ="930"/>
  <unuse id ="kun3"/>  
  <useAndShow id ="kun4" res ="yama/yamaKunkun" pos ="200,50,0"/>
  
  <frame count ="970"/>
  <endIf id="all"/>
  <unuse id ="kun4"/>
  <beginMove id ="kuma" to="460,-46,2" duration="240"/>
