<?xml version="1.0" encoding="utf-8" ?>
<!-- 出撃 -->
<kyscript>
  
  <frame count ="0"/>
  <useAndShow id ="intro" res ="syutugeki/syutugekiIntro" pos ="0,-32,2"/>
  <useAndShow id ="message" res ="syutugeki/syutugekiJunban" pos ="0,200,0"/>
  <useAndShow id ="fukidasi" res ="syutugeki/syutugekiFukidasi" pos ="193,200,1"/>
  <beginSound name="bgm_kikou" loop="true"/>
  
  <frame count ="150"/>
  <fadeScreen kind="fadeout" duration="30"/>
  <frame count ="180"/>
  <fadeScreen kind="fadein" duration="30"/>
  <unuse id ="intro"/>
  <unuse id ="message"/> 
  <unuse id ="fukidasi"/> 
  <useAndShow id ="dasa" res ="syutugeki/syutugekiTyairoino" pos ="-120,120,2"/>
  <useAndShow id ="akai" res ="syutugeki/syutugekiAkaino" pos ="120,120,2"/>
  <useAndShow id ="omae" res ="syutugeki/syutugekiOmae" pos ="-24,-140,1"/>
  <useAndShow id ="syaa" res ="syutugeki/syutugekiHitoMati" pos ="48,-200,0"/>
  <beginDrag id ="omae" range="-240,-150,240,90" />
  <beginIf id ="goal1" target ="object" name ="omae" crange="120,40,80,80" goto="1000"/>
  <beginIf id ="goal2" target ="object" name ="omae" crange="-120,40,80,80" goto="2000"/>

  <beginIf id ="goal3" target ="object" name ="omae" crange="200,-160,80,80" goto="3000"/>
  <beginIf id ="goal4" target ="object" name ="omae" crange="-200,-160,80,80" goto="3000"/>

  <beginTimer id ="timer" duration="600"/>
  <beginIf id="timeout" target="animend" name ="timer" goto="9000" priority="1"/>
  <wait />

  <!-- 赤いので出撃 -->
  <frame count ="1000"/>
  <endDrag id ="omae"/>
  <unuse id ="timeout" />
  <endIf id="all"/>
  <beginMoveEx id ="omae" pos="120,90" scale ="0.5,0.5" duration="60"/>
  <beginSound name="se_enter"/>
  <frame count ="1060"/>
  <halt result ="2"/>

  <!-- ぼろいので出撃 -->
  <frame count ="2000"/>
  <endDrag id ="omae"/>
  <unuse id ="timeout" />
  <endIf id="all"/>
  <beginMoveEx id ="omae" pos="-120,90" scale ="0.5,0.5" duration="60"/>
  <beginSound name="se_enter"/>
  <frame count ="2060"/>
  <halt result ="1"/>

  <!-- 横へよける -->
  <frame count ="3000"/>
  <endDrag id ="omae"/>
  <endIf id="all"/>
  <unuse id ="goal1" />
  <unuse id ="goal2" />

  <beginMoveEx id ="syaa" pos="80,0" duration="60"/>
  <frame count ="3060"/>
  <beginSound name="se_enter"/>
  <beginMoveEx id ="syaa" pos="120,90" scale ="0.5,0.5" duration="60"/>
  <frame count ="3120"/>
  <unuse id ="syaa" />
  <beginDrag id ="omae" range="-240,-150,240,90" />
  <beginIf id ="goal1" target ="object" name ="omae" crange="120,40,80,80" goto="4000"/>
  <beginIf id ="goal2" target ="object" name ="omae" crange="-120,40,80,80" goto="5000"/>
  <beginTimer id ="timer" duration="400"/>
  <beginIf id="timeout" target="animend" name ="timer" goto="9000" priority="1"/>
  <wait />

  <!-- 赤いので出撃 -->
  <frame count ="4000"/>
  <endDrag id ="omae"/>
  <unuse id ="timeout" />
  <endIf id="all"/>
  <beginMoveEx id ="omae" pos="120,90" scale ="0.5,0.5" duration="60"/>
  <beginSound name="se_enter"/>
  <frame count ="4060"/>
  <var name="secret" op="set" value="1"/>
  <halt result ="2"/>

  <!-- ぼろいので出撃 -->
  <frame count ="5000"/>
  <endDrag id ="omae"/>
  <unuse id ="timeout" />
  <endIf id="all"/>
  <beginMoveEx id ="omae" pos="-120,90" scale ="0.5,0.5" duration="60"/>
  <beginSound name="se_enter"/>
  <frame count ="5060"/>
  <halt result ="1"/>

  <!-- 時間切れで終了 -->
  <frame count ="9000"/>
  <endIf id="all"/>
  <halt result="0"/>


  
</kyscript>