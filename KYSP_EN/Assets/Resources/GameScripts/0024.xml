<?xml version="1.0" encoding="utf-8" ?>
<!-- 立ち読み -->
<kyscript>

  <frame count ="0"/>
  <useAndShow id ="tana" res ="tatiyomi/tatiyomiHondana" pos ="0,0,4"/>
  <useAndShow id ="plate" res ="tatiyomi/tatiyomiPlate" pos ="0,200,3"/>
  <useAndShow id ="hito1" res ="tatiyomi/tatiyomiHito" pos ="-200,-130,1"/>
  <useAndShow id ="hito2" res ="tatiyomi/tatiyomiHito" pos ="-120,-130,1"/>
  <useAndShow id ="hito3" res ="tatiyomi/tatiyomiHito" pos ="120,-130,1"/>
  <useAndShow id ="hito4" res ="tatiyomi/tatiyomiHito" pos ="200,-130,1"/>
  <useAndShow id ="megane" res ="tatiyomi/tatiyomiMegane" pos ="-10, -130, 2"/>
  <useAndShow id ="omae" res ="tatiyomi/tatiyomiOmaeR" pos ="0,-130,0"/>
  <beginSound name="bgm_dance" loop="true"/>

  <!-- メガネうろうろ -->
  <frame count ="60"/>
  <beginMove id ="megane" to="-40,-130" duration="20"/>
  <frame count ="100"/>
  <beginMove id ="megane" to="30,-130" duration="40"/>
  <frame count ="120"/>
  <beginDrag id="omae" range="-40,-140,40,-130"/>
  <beginIf id="goal1" target="object" name="omae" crange="-50,-130, 30, 40" goto="1000"/>
  <beginIf id="goal2" target="object" name="omae" crange="50,-130, 30, 40" goto="2000"/>

  <!-- 時間切れ -->
  <frame count ="900"/>
  <endDrag id="omae"/>
  <halt result ="0"/>

  <!-- 左によける -->
  <frame count ="1000"/>
  <endDrag id="omae"/>
  <endIf id="all"/>
  <beginMove id="omae" to="-40,-130" duration="60"/>
  <frame count ="1060"/>
  <beginMove id="megane" to="40,-130" duration="30"/>
  <frame count ="1120"/>
  <halt result ="1"/>

  <!-- 右によける -->
  <frame count ="2000"/>
  <beginTimer id ="tm0" duration="320"/>
  <beginIf id="to0" target="animend" name ="tm0" goto="3000" priority="1"/>
  <beginIf target="always" goto="2200"/>
  <wait />

  <frame count ="2200"/>
  <endDrag id="omae"/>
  <endIf id="goal1"/>  
  <endIf id="goal2"/>  
  <beginMove id="omae" to="40,-130" duration="60"/> 
  <frame count ="2260"/>
  <beginMove id="megane" to="-40,-130" duration="30"/>
  <beginDrag id="omae" rewind ="true" range="-40,-140,40,-130"/>
  <beginIf id="goal1" target="object" name="omae" crange="-50,-130, 30, 40" goto="2400"/>
  <frame count="2320"/>
  <endIf id ="all"/>
  <endDrag id="omae"/>
  <halt result="1"/>

  <frame count ="2400"/>
  <endDrag id="omae"/>
  <endIf id="goal1"/>  
  <endIf id="goal2"/>  
  <beginMove id="omae" to="-40,-130" duration="60"/> 
  <frame count ="2460"/>
  <beginMove id="megane" to="40,-130" duration="30"/>
  <beginDrag id="omae" rewind ="true" range="-40,-140,40,-130"/>
  <beginIf id="goal2" target="object" name="omae" crange="50,-130, 30, 40" goto="2200"/>
  <frame count="2520"/>
  <endIf id ="all"/>
  <endDrag id="omae"/>
  <halt result="1"/>

  <frame count="3000"/>
  <var name="secret" op="set" value="1"/>
  <halt result="0"/>
  
</kyscript>