<?xml version="1.0" encoding="utf-8" ?>
<!-- 戦隊オーディション -->
<kyscript>
  
  <frame count ="0"/>
  <useAndShow id ="cast00" res ="audition/auditionBack" pos ="-146,40,3"/>
  <useAndShow id ="cast01" res ="audition/auditionBko" pos ="128,17,1"/>
  <useAndShow id ="omae" res ="audition/auditionOmaeSuwari" pos ="-2,32,2"/>
  <beginSound name="bgm_heartbeat" loop="true"/>

  <beginIf id="goal1" target="touchaction" direction="0,10" goto="1000"/>

  <frame count ="30"/>
  <useAndShow id ="kanban" res ="audition/auditionKantokuText" pos ="0,-133,0"/>


  <!-- 時間切れ -->
  <frame count ="600"/>
  <halt result ="0"/>

  <!-- ちょっとあげる -->
  <frame count ="1000"/>
  <unuse id ="omae"/>
  <useAndShow id ="omae2" res ="audition/auditionOmaeHandUp1" pos ="-2,32,2"/>
  <beginIf id="goal2" target="touchaction" direction="0,10" goto="2000"/>
  <beginIf id="goal3" target="touchaction" direction="10,0" goto="3000"/>

  <!-- 時間切れ2 -->
  <frame count ="1400"/>
  <endIf id ="all"/>
  <halt result ="0"/>
 
  <!-- あげる -->
  <frame count ="2000"/>
  <endIf id ="all"/>
  <unuse id ="omae2"/>
  <beginSound name="se_yes" loop="false"/>
  <useAndShow id ="omae3" res ="audition/auditionOmaeHandUp2" pos ="-2,32,2"/>
  <frame count ="2120"/>
  <halt result ="1"/>
  
  <!-- シークレット -->
  <frame count ="3000"/>
  <endIf id ="all"/>
  <unuse id ="omae2"/>
  <useAndShow id ="omae3" res ="audition/auditionOmaeYubisasi" pos ="-2,32,2"/>
  <frame count ="3060"/>
  <var name="secret" op="set" value="1"/>
  <halt result ="2"/>


</kyscript>
