<?xml version="1.0" encoding="utf-8" ?>
<!-- 熱湯風呂その後 -->
<kyscript>
  
  <frame count ="0"/>
  <var name="reaction" op="set" value="0"/>
  <!-- Cut 1 -->
  <useAndShow id ="cut1" res ="nettou/nettousonogoCut1" pos ="500,0,0"/>
  <beginSound name="bgm_dance" loop="true"/>
  <frame count ="10"/>
  <beginSound name="se_splash" />
  <frame count ="20"/>
  <beginMove id ="cut1" to ="0,0" duration="30"/>

  <!-- Cut 2 -->
  <frame count ="120"/>
  <unuse id ="cut1" />
  <useAndShow id ="bg" res ="nettou/nettousonogoBG" pos ="0,-100,5"/>
  <useAndShow id ="omae" res ="nettou/nettouSonogoOmae" pos ="0,0,0"/>
  <useAndShow id ="text" res ="nettou/nettouSonogoText" pos ="0,0,0"/>

  <beginTimer id ="timer0" duration="600"/>
  <beginIf id="timeout0" target="animend" name ="timer0" goto="9000" priority="1"/>
  
  <beginIf id="goal1" target="touchaction" direction="0,3" goto="1000"/>
  <beginIf id="goal2" target="touchaction" direction="0,-10" goto="3000"/>
 
  <wait />

  <!-- Atui -->
  <frame count ="1000" />
  <unuse id ="goal1"/>
  <endIf id ="goal2" />
  <beginAnim id ="omae" anim ="1" />
  <beginAnim id ="text" anim ="1" />
  <frame count ="1005" />
  <beginSound name="se_laugh" />
  <frame count ="1060" />
  <beginSound name="se_splash" />
  <beginIf id="goal1" target="touchaction" direction="0,3" goto="2000"/>
  <wait />

  <!-- Yamete -->
  <frame count ="2000" />
  <var name="reaction" op="set" value="1"/>
  <unuse id ="goal1"/>
  <endIf id ="goal2" />
  <beginAnim id ="omae" anim ="2" />
  <beginAnim id ="text" anim ="2" />
  <frame count ="2005" />
  <beginSound name="se_laugh" />
  <frame count ="2060" />
  <beginSound name="se_splash" />
  <beginIf id="goal1" target="touchaction" direction="0,3" goto="1000"/>
  <wait />

  <!-- Moguru -->
  <frame count ="3000" />
  <unuse id ="timeout0"/>
  <endIf id ="all"/>
  <unuse id ="text"/>
  <beginAnim id ="omae" anim ="3" />
  <beginSound name="se_splash" />
  <frame count ="3240" />
  <var name="secret" op="set" value="1"/>
  <halt result ="2"/>


  <!-- 時間切れ -->
  <frame count ="9000"/>
  <endIf id ="all"/>
  <beginIfVar lhs="$reaction" op="eq" rhs="1" goto="9100"/>  
  <halt result ="0"/>
  
  <frame count ="9100"/>
  <halt result ="1"/>
  
  
  
</kyscript>